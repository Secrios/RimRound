<Defs>

    <!-- Candycane looking tree which should drop some candy -->
    <ThingDef ParentName="DeciduousTreeBase">
        <defName>RimRound_CandyTree</defName>
        <label>candy tree</label>
        <description>This tree has evolved to give off calorie dense candy.</description>
        <graphicData>
            <texPath>Things/Plant/RimRound_OakCandy/Mature</texPath>
            <graphicClass>Graphic_Random</graphicClass>
            <shadowData>
                <volume>(0.2, 0.35, 0.13)</volume>
                <offset>(-0.03,0,-0.44)</offset>
            </shadowData>
        </graphicData>
        <statBases>
            <Beauty>2</Beauty>
            <BeautyOutdoors>2</BeautyOutdoors>
        </statBases>
        <plant>
            <leaflessGraphicPath>Things/Plant/TreeOak_Leafless</leaflessGraphicPath>
            <immatureGraphicPath>Things/Plant/RimRound_OakCandy/Immature</immatureGraphicPath> <!-- Todo: Replace with immature -->
            <growDays>12</growDays>
            <harvestYield>10</harvestYield>
            <harvestWork>250</harvestWork>
            <harvestTag>Standard</harvestTag>
            <harvestAfterGrowth>0.30</harvestAfterGrowth>
            <harvestedThingDef>RimRound_CandyBerries</harvestedThingDef>
            <soundHarvesting>Harvest_Standard</soundHarvesting>
            <soundHarvestFinish>Harvest_Standard_Finish</soundHarvestFinish>
            <forceIsTree>true</forceIsTree>
            <wildOrder>2</wildOrder>
            <purpose>Food</purpose>
        </plant>
        <comps>
            <li Class="RimRound.Comps.SpawnThingOnDestroy_CompProperties">
                <Def>WoodLog</Def>
                <Count>5~27</Count>
            </li>
            <li Class="RimRound.Comps.SpawnThingOnDestroy_CompProperties">
                <Def>ChoppedStump</Def>
                <Count>1</Count>
            </li>
        </comps>
        <modExtensions>
            <li Class="RimRound.Patch.Plants.Replace_ChopTree_Designation" />
        </modExtensions>
    </ThingDef>

    <ThingDef ParentName="PlantBase">
        <defName>RimRound_CandyBush</defName>
        <label>candy bush</label>
        <description>This bush is growing... candy?</description>
        <statBases>
            <MaxHitPoints>85</MaxHitPoints>
            <Nutrition>0.2</Nutrition>
        </statBases>
        <graphicData>
            <texPath>Things/Plant/RimRound_BushCandy/Mature</texPath>
            <graphicClass>Graphic_Random</graphicClass>
        </graphicData>
        <selectable>true</selectable>
        <pathCost>14</pathCost>
        <ingestible />
        <plant>
            <immatureGraphicPath>Things/Plant/RimRound_BushCandy/Immature</immatureGraphicPath>
            <growDays>5</growDays>
            <dieIfLeafless>true</dieIfLeafless>
            <harvestTag>Standard</harvestTag>
            <harvestedThingDef>RimRound_CandyBerries</harvestedThingDef>
            <harvestYield>3</harvestYield>
            <sowMinSkill>5</sowMinSkill>
            <sowTags>
                <li>Ground</li>
                <li>Hydroponic</li>
            </sowTags>
            <topWindExposure>0.1</topWindExposure>
            <visualSizeRange>0.4~1.05</visualSizeRange>
            <wildOrder>2</wildOrder>
            <purpose>Food</purpose>
            <humanFoodPlant>true</humanFoodPlant>
        </plant>
    </ThingDef>

